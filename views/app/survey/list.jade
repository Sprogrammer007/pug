extends ../layout
block css

block content
  loader(name="Survey Manager" ng-class="{loaded:loaded}")
  survey-dash(loaded="loaded" current-user="currentUser")#survey

block templates
  script(type='text/ng-template' id="SurveyDash")
    .survey-dash(ng-class="{loaded:loaded}")  
      survey-chart(current-user="currentUser" loaded="loaded")
      account-details(current-user="currentUser" loaded="loaded")
      survey-list(surveys="surveys" loaded="loaded")
  script(type='text/ng-template' id="SurveyList")
    include ./_surveys_list.jade  
  script(type='text/ng-template' id="AccountDetails")
    include ./_account_details.jade
  script(type='text/ng-template' id="SurveyChart")
    include ./_list_chart.jade

block script
  script(src='/app/js/services/survey.js')
  script(src='/app/js/directives/survey.js')
  script(src='/app/js/controllers/survey.js')