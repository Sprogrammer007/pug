  body
    // Google Tag Manager


    .container

      .row(style="margin-top: 300px;")
        .col-lg-offset-4.col-lg-4
          .text-danger
            - if (message)

              p= message
          form(action='/admin/login', method='post')
            .form-group
              label Username
              input.form-control(type='text', name='username' )
            .form-group
              label Password
              input.form-control(type='password', name='password' )
            .form-group
              input.form-control(type='submit', value='Login' style="margin-left: 50%; width: 50%; background-color: #555; color: #FFF;")

