extends ../layout

block content
  #single
    .container
      .single-header
        -if (post)
          .post-dispaly-image
            .feature-offer
            img.post-di(src="#{post.display_image}")
      -if (post)

        #social.share-wrapper()
          #twitter.twitter(data-url='https://designedforresult.com/blog/#{post.url}', data-text='')
          #facebook.facebook(data-url='https://designedforresult.com/blog/#{post.url}', data-text='')
          #googleplus.googleplus(data-url='designedforresult.com/blog/#{post.url}', data-text='')
            a.box(href="#")
              .social-icon.fa.fa-google-plus
              span.count 0
          #linkedin.linkedin(data-url='https://designedforresult.com/blog/#{post.url}', data-text='')

      .main-content-wrapper
        - if (post)
          .post-title
            h1 #{post.title}
            .post-meta
              .pull-left
                .post-category
                  | #{post.category}
              .pull-right
                span By: 
                  span.arthur #{post.arthur} 
                  | on  
                span.date
                  | #{post.create_date}
            .clearfix
          .post-content
            | !{post.content}
            #post-footer-share
              #twitter.twitter(data-url='https://designedforresult.com/blog/#{post.url}', data-text='')
              #facebook.facebook(data-url='https://designedforresult.com/blog/#{post.url}', data-text='')
              #googleplus.googleplus(data-url='designedforresult.com/blog/#{post.url}', data-text='')
                a.box(href="#")
                  .social-icon.fa.fa-google-plus
                  span.count 0
              #linkedin.linkedin(data-url='https://designedforresult.com/blog/#{post.url}', data-text='')

    .post-optin-wrapper
      .container
        .optin-box.optin-content.col-lg-8.col-lg-offset-2
          - if (post.boptin != '' && post.boptin != undefined)
            | !{post.boptin} 
          - else
            p.optin-title.text-center
              | How To Tell If A Website Is Right For Your Small Business
            p.optin-description.text-center
              | Follow a 5 Steps Question to Determine if a Website Will Benefit Your Business!
            a.btn.btn-optin(href="/lp/guide")
              | Download This Guide
