      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#top-nav')
        span.sr-only Toggle navigation      
        span.icon-bar    
        span.icon-bar 
        span.icon-bar   
      a.logo(href="/")
        img(src="/images/logo_orange.png")

    #top-nav.collapse.navbar-collapse

      ul.nav.navbar-nav
         
      if (user)  
        ul.nav.navbar-nav.navbar-right
          li.user-box
            .user-icon

            span.username
              | #{user.username}
